<div class="hero-section">
    <div class="hero-background">
        <div class="gradient-overlay"></div>
        <div class="pattern-overlay"></div>
    </div>
    
    <div class="flex main-header">
        <div class="hero-content">
            <div class="hero-text-section">
                <span class="hero-greeting">Hello, I'm</span>
                <h1 class="hero-name">Marc Richardson</h1>
                <div class="hero-title">Data Scientist & Policy Technologist</div>
                <div class="hero-tagline">
                    <span class="tagline-static">I help organizations</span>
                    <span class="tagline-dynamic"></span>
                </div>
                <div class="hero-cta">
                    <button class="cta-primary">
                        <a href="{{ '/about/' | url }}">Learn More</a>
                    </button>
                    <button class="cta-secondary">
                        <a href="{{ '/assets/Marc Richardson_Resume.pdf' | url }}" target="_blank">View Resume</a>
                    </button>
                </div>
                <div class="hero-social">
                    <a href="{{ site.author.github }}" class="social-link">
                        <img src="{{ '/images/git-hub-icon.png' | url }}" alt="Github">
                    </a>
                    <a href="{{ site.author.linkedin }}" class="social-link">
                        <img src="{{ '/images/linkedin-logo.jpg' | url }}" alt="LinkedIn">
                    </a>
                    <a href="mailto:{{ site.author.email }}" class="social-link">
                        <img src="{{ '/images/envelope.png' | url }}" alt="Email">
                    </a>
                </div>
            </div>
            <div class="hero-image-section">
                <div class="headshot-container">
                    <div class="headshot-glow"></div>
                    <img id="headshot" src="{{ '/images/headshot2.jpg' | url }}" alt="Marc Richardson">
                </div>
            </div>
        </div>
    </div>
</div>